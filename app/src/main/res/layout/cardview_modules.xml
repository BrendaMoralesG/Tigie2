<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cvModules"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:weightSum="1">


    <RelativeLayout
        android:id="@+id/relativeModu"
        android:layout_width="match_parent"
        android:layout_below="@+id/fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:weightSum="1">

            <View
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@color/colorAzul3"
                android:padding="25dip"
                android:layout_below="@+id/tableLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/viewModule1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorDiverColor"
                android:padding="25dip"
                android:layout_below="@+id/tableLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/viewModule2"/>

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/z_aduanas2"
            android:id="@+id/imageModule"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moduleTitle"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imageModule"
            android:layout_toEndOf="@+id/imageModule"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/textoTabletTitulos"
            android:layout_marginRight="@dimen/textoTabletTitulos" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/z_next2"
            android:id="@+id/iconenext"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />

    </RelativeLayout>




</androidx.cardview.widget.CardView>