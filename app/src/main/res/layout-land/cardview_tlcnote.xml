<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvChapters"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorDiverColor">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/z_geo"
                android:id="@+id/iconAladiCountryr"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/tlcNoteTitle"
                android:text=""
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:textColor="@color/colorPrimaryDark4"
                android:textStyle="bold"
                />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorAzul2"
            android:padding="25dip"
            android:id="@+id/fill_parentAla1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/tlcNoteFreeCountryCode"
            android:src="@drawable/z_mundo2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorAzul2"
            android:padding="25dip"
            android:id="@+id/fill_parentAla2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeL7s"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/z_nota"
                android:id="@+id/iconTlcNote2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAnnexNote"
                android:text="@string/noteAnnex"
                android:gravity="right"
                android:layout_gravity="center_vertical|right"
                android:padding="3dip"
                android:textColor="@color/colorVerde"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iconTlcNote2"
                android:layout_toEndOf="@+id/iconTlcNote2" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeL7s"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="left"
            android:id="@+id/tlcNoteDescription"
            android:text=""
            style="@style/styleCode1"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorAzul2"
            android:padding="25dip"
            android:id="@+id/fill_parentAla3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeL4s"
            android:layout_below="@+id/relativeL2s"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/z_agremment2"
                android:id="@+id/iconTlcAgreement"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAnnexDof"
                android:id="@+id/tlcNoteAplicationDate"
                android:text=""
                style="@style/styleCode1"
                android:layout_gravity="center_vertical|right"
                android:gravity="left"
                android:layout_marginLeft="24dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeL5s"
            android:layout_below="@+id/relativeL4s"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/z_effective"
                android:id="@+id/iconTlcEffective"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAnnexDof"
                android:id="@+id/tlcNoteEfectiveDate"
                android:text=""
                style="@style/styleCode1"
                android:layout_gravity="center_vertical|right"
                android:gravity="left"
                android:layout_marginLeft="21dp"
                android:textColor="@color/colorVigencia"
                />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>